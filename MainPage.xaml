<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Currency_Exchanger.MainPage">

    <Grid Margin="30" VerticalOptions="Start">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.4*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.4*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Text="Total: $0" 
               HorizontalTextAlignment="Center" 
               FontSize="16" 
               Grid.ColumnSpan="6" 
               Grid.Row="0" 
               HorizontalOptions="FillAndExpand" 
               VerticalOptions="End"
               x:Name="TotalLabel"/>


        <!-- First row -->

        <Frame BorderColor="Black" 
               Grid.ColumnSpan="6" 
               Grid.Row="1"
               Margin="5"
               CornerRadius="10"/>

        <Label Text="$1
               x0"
               FontSize="20"
               HorizontalTextAlignment="Center"
               Grid.Row="1"
               Grid.Column="0"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               x:Name="DollarQtyLabel"
               />

        <Button Text="+"
                FontSize="40"
                Grid.Row="1"
                Grid.Column="1"
                Margin="0, 6"
                x:Name="DollarAddButton" Clicked="DollarAddButton_Pressed"/>

        <Button Text="-"
                FontSize="40"
                Grid.Row="1"
                Grid.Column="2"
                Margin="0, 6"
                x:Name="DollarTakeButton" Clicked="DollarTakeButton_Pressed"/>

        <Button Text="*"
                TextColor="Black"
                FontSize="30"
                Grid.Row="1"
                Grid.Column="3"
                Margin="0, 6"
                BackgroundColor="White"/>

        <Button Text="v"
                FontSize="30"
                Grid.Row="1"
                Grid.Column="4"
                Margin="0, 6"
                x:Name="DollarToFiftyButton" Clicked="DollarToFiftyButton_Pressed"/>

        <Label Text="$0"
               FontSize="20"
               HorizontalTextAlignment="Center"
               Grid.Row="1"
               Grid.Column="5"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               Margin="0, 5"
               x:Name="DollarTotalLabel"/>

        <!-- Second row -->

        <Frame BorderColor="Black" 
               Grid.ColumnSpan="6" 
               Grid.Row="2"
               Margin="5"
               CornerRadius="10"/>

        <Label Text="50c
               x0"
               FontSize="20"
               HorizontalTextAlignment="Center"
               Grid.Row="2"
               Grid.Column="0"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               Margin="0, 5"
               x:Name="FiftyQtyLabel"/>

        <Button Text="+"
                FontSize="40"
                Grid.Row="2"
                Grid.Column="1"
                Margin="0, 6"
                x:Name="FiftyAddButton" Clicked="FiftyAddButton_Pressed"/>

        <Button Text="-"
                FontSize="40"
                Grid.Row="2"
                Grid.Column="2"
                Margin="0, 6"
                x:Name="FiftyTakeButton" Clicked="FiftyTakeButton_Pressed"/>

        <Button Text="^"
                FontSize="30"
                Grid.Row="2"
                Grid.Column="3"
                Margin="0, 6"
                x:Name="FiftyToDollarButton" Clicked="FiftyToDollarButton_Pressed"/>

        <Button Text="v"
                FontSize="30"
                Grid.Row="2"
                Grid.Column="4"
                Margin="0, 6"
                x:Name="FIftyToTenButton" Clicked="FIftyToTenButton_Pressed"/>

        <Label Text="$0"
               FontSize="20"
               HorizontalTextAlignment="Center"
               Grid.Row="2"
               Grid.Column="5"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               Margin="0, 5" 
               x:Name="FiftyTotalLabel"/>

        <!-- Third row -->

        <Frame BorderColor="Black" 
               Grid.ColumnSpan="6" 
               Grid.Row="3"
               Margin="5"
               CornerRadius="10"/>

        <Label Text="10c
               x0"
               FontSize="20"
               HorizontalTextAlignment="Center"
               Grid.Row="3"
               Grid.Column="0"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               Margin="0, 5"
               x:Name="TenQtyLabel"/>

        <Button Text="+"
                FontSize="40"
                Grid.Row="3"
                Grid.Column="1"
                Margin="0, 6"
                x:Name="TenAddButton" Clicked="TenAddButton_Pressed"/>

        <Button Text="-"
                FontSize="40"
                Grid.Row="3"
                Grid.Column="2"
                Margin="0, 6"
                x:Name="TenTakeButton" Clicked="TenTakeButton_Pressed"/>

        <Button Text="^"
                FontSize="30"
                Grid.Row="3"
                Grid.Column="3"
                Margin="0, 6"
                x:Name="TenToFiftyButton" Clicked="TenToFiftyButton_Pressed"/>

        <Button Text="v"
                FontSize="30"
                Grid.Row="3"
                Grid.Column="4"
                Margin="0, 6"
                x:Name="TenToFiveButton" Clicked="TenToFiveButton_Pressed"/>

        <Label Text="$0"
               FontSize="20"
               HorizontalTextAlignment="Center"
               Grid.Row="3"
               Grid.Column="5"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               Margin="0, 5"
               x:Name="TenTotalLabel"/>

        <!-- Forth row -->

        <Frame BorderColor="Black" 
               Grid.ColumnSpan="6" 
               Grid.Row="4"
               Margin="5"
               CornerRadius="10"/>

        <Label Text="5c
               x0"
               FontSize="20"
               HorizontalTextAlignment="Center"
               Grid.Row="4"
               Grid.Column="0"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               Margin="0, 5"
               x:Name="FiveQtyLabel"/>

        <Button Text="+"
                FontSize="40"
                Grid.Row="4"
                Grid.Column="1"
                Margin="0, 6"
                x:Name="FiveAddButton" Clicked="FiveAddButton_Pressed"/>

        <Button Text="-"
                FontSize="40"
                Grid.Row="4"
                Grid.Column="2"
                Margin="0, 6"
                x:Name="FiveTakeButton"/>

        <Button Text="^"
                FontSize="30"
                Grid.Row="4"
                Grid.Column="3"
                Margin="0, 6"
                x:Name="FiveToTenButton" Clicked="FiveTakeButton_Pressed"/>

        <Button Text="*"
                TextColor="Black"
                FontSize="30"
                Grid.Row="4"
                Grid.Column="4"
                Margin="0, 6"
                BackgroundColor="White"/>

        <Label Text="$0"
               FontSize="20"
               HorizontalTextAlignment="Center"
               Grid.Row="4"
               Grid.Column="5"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               Margin="0, 5"
               x:Name="FiveTotalLabel" />


    </Grid>

</ContentPage>
